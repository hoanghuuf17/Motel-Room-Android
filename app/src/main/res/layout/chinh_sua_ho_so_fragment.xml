<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChinhSuaHoSoActivity"
    android:orientation="vertical">

    <TextView
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text="Chỉnh sửa hồ sơ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@color/teal_700"
        android:layout_marginTop="20dp"
        android:id="@+id/circle_Fr_Chinh_Sua"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/txtSelectPhoto_Edit"
        android:layout_marginBottom="30dp"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:textColor="@color/design_default_color_primary"
        android:text="Chọn hình ảnh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_EditTenHienThi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Tên hiển thị"
            android:inputType="text" />
        <EditText
            android:id="@+id/edt_EditMatkhau"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/edt_NhapLaiMK"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_ChinhSua"
            android:layout_width="293dp"
            android:layout_height="44dp"
            android:text="Cập nhật"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_round"/>
    </LinearLayout>

</LinearLayout>